<body>
  <div class="card" id="card">
    <div class="hearts"></div>
    <h1>Will you be my Valentine? ðŸ’˜</h1>
    <p>(Choose wisely ðŸ˜‡)</p>

    <div class="btns">
      <button id="yes">Yes ðŸ’–</button>
    </div>

    <button id="no" aria-label="No">No ðŸ™ƒ</button>

    <div class="msg" id="msg"></div>
  </div>

  <script>
    const card = document.getElementById("card");
    const noBtn = document.getElementById("no");
    const yesBtn = document.getElementById("yes");
    const msg = document.getElementById("msg");

    // Place "No" within the card bounds (avoids going off-screen)
    function moveNoButton(avoidX, avoidY) {
      const cardRect = card.getBoundingClientRect();
      const btnRect  = noBtn.getBoundingClientRect();

      const padding = 14;

      const minX = padding;
      const minY = padding + 70; // keep it below title area
      const maxX = cardRect.width - btnRect.width - padding;
      const maxY = cardRect.height - btnRect.height - padding;

      // random position, but try to move away from the cursor
      let x, y, tries = 0;

      do {
        x = Math.random() * (maxX - minX) + minX;
        y = Math.random() * (maxY - minY) + minY;
        tries++;
        // keep trying until it's not too close to the cursor
      } while (
        tries < 30 &&
        Math.hypot((x + btnRect.width/2) - avoidX, (y + btnRect.height/2) - avoidY) < 140
      );

      noBtn.style.left = x + "px";
      noBtn.style.top  = y + "px";
      noBtn.style.transform = "translate(0, 0)";
    }

    // Keep "No" dodging when cursor gets near it
    function handlePointerMove(clientX, clientY) {
      const cardRect = card.getBoundingClientRect();
      const btnRect  = noBtn.getBoundingClientRect();

      // pointer position inside card
      const x = clientX - cardRect.left;
      const y = clientY - cardRect.top;

      // distance from pointer to button center
      const bx = (btnRect.left - cardRect.left) + btnRect.width / 2;
      const by = (btnRect.top  - cardRect.top)  + btnRect.height / 2;

      const d = Math.hypot(x - bx, y - by);

      // if you're within this radius, it runs
      const scareRadius = 120;

      if (d < scareRadius) moveNoButton(x, y);
    }

    // Mouse + touch support
    card.addEventListener("mousemove", (e) => handlePointerMove(e.clientX, e.clientY));
    card.addEventListener("touchstart", (e) => {
      const t = e.touches[0];
      handlePointerMove(t.clientX, t.clientY);
    }, { passive: true });
    card.addEventListener("touchmove", (e) => {
      const t = e.touches[0];
      handlePointerMove(t.clientX, t.clientY);
    }, { passive: true });

    // Also run away if it ever gets hovered/focused
    noBtn.addEventListener("mouseenter", () => {
      const cardRect = card.getBoundingClientRect();
      moveNoButton(cardRect.width / 2, cardRect.height / 2);
    });
    noBtn.addEventListener("focus", () => noBtn.blur());

    // Yes button
    yesBtn.addEventListener("click", () => {
      msg.textContent = "YAYYYYY ðŸ’ž Best decision ever. See you on Valentineâ€™s! ðŸ¥°";
      // optional: disable dodging and hide no
      noBtn.style.display = "none";
      yesBtn.textContent = "Locked in ðŸ’˜";
      yesBtn.disabled = true;
      yesBtn.style.opacity = "0.85";
      yesBtn.style.cursor = "default";
    });

    // Put No somewhere random on load
    window.addEventListener("load", () => {
      const cardRect = card.getBoundingClientRect();
      moveNoButton(cardRect.width / 2, cardRect.height / 2);
    });
  </script>
</body>
